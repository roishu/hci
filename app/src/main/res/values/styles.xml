<resources>

    <!-- Base application theme. -->
    <style name="RoiLight" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Roi" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimaryDark">@color/primary_dark_roi</item>
        <item name="colorPrimary">@color/primary_dark_roi</item>
        <item name="android:colorBackground">@color/primary_dark_roi</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
